<body>
  <div class="box" id="heading">
    <h1><%=listTitle %></h1>
  </div>

  <div class="box">
    <% for(var i=0;i<newListItem.length;i++){ %>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItem[i] %></p>
    </div>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <!-- to check if the value was added from item page or work page ,we can add a value associated with button using ejs like listTitle -->
      <button type="submit" name="button" value=<%= listTitle %>>+</button>
    </form>

  </div>
